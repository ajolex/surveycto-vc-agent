{
  "manifest_version": 3,
  "name": "SurveyCTO Version Control",
  "version": "1.0.0",
  "description": "Automatic deployment tracking for SurveyCTO forms",
  "permissions": [
    "storage",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "https://*.surveycto.com/*",
    "https://docs.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.surveycto.com/main.html*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://docs.google.com/spreadsheets/*"
      ],
      "js": [
        "sheets-content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "SurveyCTO Version Control"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}